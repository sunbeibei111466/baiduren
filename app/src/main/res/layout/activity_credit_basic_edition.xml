<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yl.baiduren.activity.credit_reporting_queries.CreditBasicEdition">
    <LinearLayout
        android:id="@+id/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/credit_basic_finish"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/back_finish" />
        </LinearLayout>


        <TextView
            android:id="@+id/title_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:text="基础版征信查询"
            android:textSize="20sp"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@mipmap/credit_bg">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <RadioGroup
                            android:id="@+id/group_credit"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/enterprise_credit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:checked="true"
                                android:text="企业信用"
                                android:textColor="@drawable/text_color"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/people_credit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:button="@null"
                                android:text="个人信用"
                                android:textColor="@drawable/text_color"
                                android:textSize="18sp"
                                android:visibility="gone"

                                />
                        </RadioGroup>

                        <TextView
                            android:id="@+id/tv_authorization"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_alignParentEnd="true"
                            android:text="申请授权"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="14dp"

                            />

                        <Space
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="4dp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/creade_basic_name"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3.5"
                            android:background="@drawable/timer_select_shape"
                            android:hint="企业全称"
                            android:paddingStart="4dp"
                            android:textSize="14sp"
                            android:focusable="false"
                            />

                        <EditText
                            android:id="@+id/creade_basic_codeNname"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/timer_select_shape"
                            android:hint="主体授权码"
                            android:lines="1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/basic_jiaodui"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/button_transparent"
                            android:gravity="center"
                            android:text="校对"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>


                    <EditText
                        android:id="@+id/icode_creade"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/timer_select_shape"
                        android:hint="请输入身份证号"
                        android:paddingStart="20dp"
                        android:visibility="gone" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_explan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/creditor_rights"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="gggg"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                >

                <View
                    android:id="@+id/xian1"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@color/blue"

                    />

                <TextView
                    android:id="@+id/tv_title_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/xian1"
                    android:text="数据接口类目"
                    android:textColor="@color/light_hei"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <com.yl.baiduren.view.MyGridView
                android:id="@+id/gv_basic_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:layout_marginStart="16dp"
                >

            </com.yl.baiduren.view.MyGridView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_debt1_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读并同意" />

        <TextView
            android:id="@+id/user_instructions_wt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《委托方承诺书》"
            android:textColor="@color/blue" />
    </LinearLayout>

    <View style="@style/line_height_0_5dp_style" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/tv_jine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_credit_topay"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_style"
            android:text="支付"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>
