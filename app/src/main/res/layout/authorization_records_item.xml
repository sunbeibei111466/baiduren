<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/record_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="信息主体名称:"
            android:textColor="@color/light_hei"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/iv_record_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/record_name"
            android:textColor="@color/light_hei"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_name"
            android:layout_marginTop="5dp"
            android:text="申请时间:"
            android:textColor="@color/light_hei"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recoud_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_record_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_time"
            android:textColor="@color/light_hei"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time"
            android:layout_marginTop="5dp"
            android:text="回复状态:"
            android:textColor="@color/light_hei"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recoud_time"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/status"
            android:textColor="@color/blue"
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/authorization_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status"
            android:layout_marginTop="5dp"
            android:text="授权码:"
            android:textColor="@color/light_hei"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_authorization_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_status"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/authorization_code"
            android:textColor="@color/light_hei"
            android:textIsSelectable="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_authorization_code"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_status"
            android:background="@drawable/records_bg"
            android:gravity="center"
            android:text="复制"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/principal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/authorization_code"
            android:layout_marginTop="5dp"
            android:text="回复原因:"
            android:textColor="@color/light_hei"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/return_reson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_authorization_code"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/principal_name"
            android:textColor="@color/light_hei"
            android:textSize="15sp" />

    </RelativeLayout>


</LinearLayout>
