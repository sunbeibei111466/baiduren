<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/bill_header"
                android:layout_width="40dp"
                android:layout_height="40dp" />


            <TextView
                android:id="@+id/my_bill_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/bill_header"
                android:textColor="@color/light_hei"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bill_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:textColor="@color/blue"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/my_bill_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_bill_company_name"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/bill_header"
                android:textColor="@color/creditor_rights"
                android:layout_marginEnd="40dp"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/bill_jine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/bill_state"
                android:layout_marginTop="6dp"
                android:textColor="@color/creditor_rights"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/id_code_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_bill_type"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/bill_header"
                android:gravity="center_vertical"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/bill_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/id_code_num"
                android:layout_marginTop="6dp"
                android:textColor="@color/light_hei"
                android:textSize="13sp" />

        </RelativeLayout>


        <View
            style="@style/line_height_0_5dp_style"
            android:layout_marginTop="6dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bill_type_details"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/creditor_rights"
                android:layout_centerVertical="true"
               />

            <Button
                android:id="@+id/bill_pay_state"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/debt_button_back"
                android:layout_centerVertical="true"
                android:textColor="@color/blue"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>