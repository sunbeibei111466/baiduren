<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_assignment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yl.baiduren.activity.tradinghall.AssignmentActivity">

    <LinearLayout
        android:id="@+id/ll_debt1_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbat_H"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/back_finish" />

        </LinearLayout>

        <TextView
            style="@style/toolbar_textview_style"
            android:text="债权转让"
            android:textColor="@color/light_hei" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_bai"
        >

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/f5f5f5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/assignmet_data"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="基本信息"
                android:textSize="16sp"
                android:textColor="@color/blue" />

            <View style="@style/line_height_0_5dp_style" />

            <TextView
                android:id="@+id/assignmet_structure"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="股份结构" />

            <View style="@style/line_height_0_5dp_style" />

            <TextView
                android:id="@+id/assignmet_situation"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="投资情况" />

            <View style="@style/line_height_0_5dp_style" />

            <TextView
                android:id="@+id/assignmet_asset"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="资产现状" />

            <View style="@style/line_height_0_5dp_style" />

            <TextView
                android:id="@+id/assignmet_debt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="负债情况" />

            <View style="@style/line_height_0_5dp_style" />

            <TextView
                android:id="@+id/assignmet_business"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="经营情况" />

            <View style="@style/line_height_0_5dp_style" />
        </LinearLayout>

        <com.yl.baiduren.view.NScrollViewpager
            android:id="@+id/assignment_pager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical" />
    </LinearLayout>
</LinearLayout>
