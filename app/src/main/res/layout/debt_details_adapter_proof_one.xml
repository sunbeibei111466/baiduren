<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/ll_parent_one"
    >

    <ImageView
        android:id="@+id/iv_item1_image"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/huobijiedai"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        >

        <LinearLayout
            android:id="@+id/ll_details_1"
            style="@style/line3_style">
            <TextView
                android:id="@+id/need_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/light_hei"
                android:text="货币借贷"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ll_details_1"
            android:id="@+id/ll_details_2"
            style="@style/line3_style">
            <TextView
                android:id="@+id/gu_jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/blue"
                android:text="币种:"/>
            <TextView
                android:id="@+id/tv_adapter_item1_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/blue"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ll_details_2"
            android:id="@+id/ll_details_3"
            style="@style/line3_style">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="总额:"
                android:textColor="@color/creditor_rights"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_adapter_item1_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/creditor_rights"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ll_details_3"
            android:id="@+id/ll_details_4"
            style="@style/line3_style">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/creditor_rights"
                android:text="未还金额:"/>
            <TextView
                android:id="@+id/tv_adapter_item1_whje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/creditor_rights"
                android:layout_marginStart="10dp"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_debt_details_item1_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/delete"

            />

    </RelativeLayout>

</LinearLayout>